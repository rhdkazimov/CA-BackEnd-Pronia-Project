@model Slider
@{
    ViewData["Title"] = "Edit";
}
<div class="row justify-content-center">
    <div class="col-md-8">
        <h1>Edit</h1>
        <form method="post" asp-action="edit" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Order">Order</label>
                <input type="text" class="form-control" asp-for="Order">
                <span asp-validation-for="Order"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title">Title</label>
                <input type="text" class="form-control" asp-for="Title">
                <span asp-validation-for="Title"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input type="text" class="form-control" asp-for="Name">
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desc">Desc</label>
                <textarea class="form-control" asp-for="Desc" rows="2"></textarea>
                <span asp-validation-for="Desc"></span>
            </div>
            <div class="form-group">
                <label asp-for="BtnText">BtnText</label>
                <input type="text" class="form-control" asp-for="BtnText">
                <span asp-validation-for="BtnText"></span>
            </div>
            <div class="form-group">
                <label asp-for="BtnUrl">BtnUrl</label>
                <input type="text" class="form-control" asp-for="BtnUrl">
                <span asp-validation-for="BtnUrl"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile">Image</label>
                <input class="form-control" asp-for="ImageFile">
                <span asp-validation-for="ImageFile"></span>
                <img width="100" src="/uploads/sliders/@Model.ImageName" />

            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

    </div>
</div>
@section Scripts{
    @Html.Partial("_ValidationScriptsPartial");
}

