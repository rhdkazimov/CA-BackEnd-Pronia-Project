@model Slider

@{
    ViewData["Title"] = "Create";

}
<div class="row justify-content-center">
    <div class="col-md-8">
        <h1>Create New Slide</h1>
        <form method="post" asp-action="create" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Order">Order</label>
                <input type="text" class="form-control" asp-for="Order" value="@ViewBag.NextOrder">
                <span class="text-danger" asp-validation-for="Order"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title">Title</label>
                <input type="text" class="form-control" asp-for="Title">
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input type="text" class="form-control" asp-for="Name">
                <span class="text-danger"  asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desc">Desc</label>
                <textarea class="form-control" asp-for="Desc" rows="2"></textarea>
                <span class="text-danger" asp-validation-for="Desc"></span>
            </div>
            <div class="form-group">
                <label asp-for="BtnText">BtnText</label>
                <input type="text" class="form-control" asp-for="BtnText">
                <span class="text-danger" asp-validation-for="BtnText"></span>
            </div>
            <div class="form-group">
                <label asp-for="BtnUrl">BtnUrl</label>
                <input type="text" class="form-control" asp-for="BtnUrl">
                <span class="text-danger" asp-validation-for="BtnUrl"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile">Image</label>
                <input class="form-control" asp-for="ImageFile">
                <span class="text-danger" asp-validation-for="ImageFile"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
@section Scripts{
    @Html.Partial("_ValidationScriptsPartial");
}
