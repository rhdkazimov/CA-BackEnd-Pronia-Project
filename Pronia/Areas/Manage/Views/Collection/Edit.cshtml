@model CollectionItems
@{
    ViewData["Title"] = "Edit";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <h1>Edit</h1>
        <form asp-action="edit" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input class="form-control" asp-for="Name">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title">Desc</label>
                <input class="form-control" asp-for="Title"></input>
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>
            <div class="form-group">
                <label asp-for="BtnUrl">Button url</label>
                <input class="form-control" asp-for="BtnUrl"></input>
                <span class="text-danger" asp-validation-for="BtnUrl"></span>
            </div>
            <div class="form-group">
                <img width="200" src="~/uploads/collection/@Model.ImageName" />
            </div>
            <div class="form-group">
                <label asp-for="ImageFile">New Image </label>
                <input class="form-control" asp-for="ImageFile">
                <span class="text-danger" asp-validation-for="ImageFile"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

@section Scripts{
    @Html.Partial("_ValidationScriptsPartial")
}
