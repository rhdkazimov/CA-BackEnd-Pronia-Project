@using Pronia.Models;
@model PlantReview

<p class="d-block">Your Rating</p>
<span class="rating-widget-block">
    <input form="reviewForm" class="d-none"  type="radio" name="rate" value="1" id="star1">
    <label for="star1"></label>
    <input form="reviewForm" class="d-none" type="radio" name="rate" value="2" id="star2">
    <label for="star2"></label>
    <input form="reviewForm" class="d-none" type="radio" name="rate" value="3" id="star3">
    <label for="star3"></label>
    <input form="reviewForm" class="d-none" type="radio" name="rate" value="4" id="star4">
    <label for="star4"></label>
    <input form="reviewForm" class="d-none" type="radio" name="rate" value="5" id="star5">
    <label for="star5"></label>
    <i class="fa fa-star" id="starItem1" aria-hidden="true"></i>
    <i class="fa fa-star" id="starItem2" aria-hidden="true"></i>
    <i class="fa fa-star" id="starItem3" aria-hidden="true"></i>
    <i class="fa fa-star" id="starItem4" aria-hidden="true"></i>
    <i class="fa fa-star" id="starItem5" aria-hidden="true"></i>
</span>
<span class="text-danger" asp-validation-for="Rate"></span>
<form id="reviewForm" method="post" asp-action="comment" class="feedback-form" >
    <div class="form-field mt-30">
        <input type="text"
               name="subject"
               placeholder="Subject (Optinal)"
               class="input-field" />
    </div>
    <div class="form-field mt-30">
        <textarea asp-for="Text"
                  placeholder="Message"
                  class="textarea-field"></textarea>
        <span class="text-danger" asp-validation-for="Text"></span>
    </div>
    <input name="PlantId" type="hidden" value="@Model.PlantId" />
    <div class="button-wrap pt-5">
        <button type="submit"
                value="submit"
                class="btn btn-custom-size xl-size btn-pronia-primary"
                name="submit">
            Post Comment
        </button>
    </div>
</form>

<script>
    document.querySelector("#starItem1").addEventListener("click", function () {
        document.querySelector("#star1").click();
        document.querySelectorAll(".rating-widget-block i").forEach((e)=>{
            e.style.color = "black"
        })
        this.style.color = "yellow"
    })
    document.querySelector("#starItem2").addEventListener("click", function () {
        document.querySelector("#star2").click();
        document.querySelectorAll(".rating-widget-block i").forEach((e) => {
            e.style.color = "black"
        })
        document.querySelector("#starItem1").style.color = "yellow"
        this.style.color = "yellow"
    })
    document.querySelector("#starItem3").addEventListener("click", function () {
        document.querySelector("#star3").click();
        document.querySelectorAll(".rating-widget-block i").forEach((e) => {
            e.style.color = "black"
        })
        document.querySelector("#starItem1").style.color = "yellow"
        document.querySelector("#starItem2").style.color = "yellow"

        this.style.color = "yellow"

    })
    document.querySelector("#starItem4").addEventListener("click", function () {
        document.querySelector("#star4").click();
        document.querySelectorAll(".rating-widget-block i").forEach((e) => {
            e.style.color = "black"
        })
        document.querySelector("#starItem1").style.color = "yellow"
        document.querySelector("#starItem2").style.color = "yellow"
        document.querySelector("#starItem3").style.color = "yellow"
        this.style.color = "yellow"

    })
    document.querySelector("#starItem5").addEventListener("click", function () {
        document.querySelector("#star5").click();
        document.querySelectorAll(".rating-widget-block i").forEach((e) => {
            e.style.color = "yellow"
        })
    })
</script>