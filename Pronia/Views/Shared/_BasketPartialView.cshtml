@model BasketViewModel 

<div class="offcanvas-body" data-count="@Model.BasketItems.Count" id="basketitemcounter">
    <div class="minicart-content">
        <div class="minicart-heading">
            <h4 class="mb-0">Shopping Cart</h4>
            <a href="#" class="button-close">
                <i class="pe-7s-close"
                   data-tippy="Close"
                   data-tippy-inertia="true"
                   data-tippy-animation="shift-away"
                   data-tippy-delay="50"
                   data-tippy-arrow="true"
                   data-tippy-theme="sharpborder"></i>
            </a>
        </div>
        <ul class="minicart-list">
            @foreach (var bi in Model.BasketItems)
            {
                <li class="minicart-product">
                    <a class="product-item_remove" asp-action="removebasket" asp-controller="plant" asp-route-id="@bi.Plant.Id">
                        <i class="pe-7s-close"
                           data-tippy="Remove"
                           data-tippy-inertia="true"
                           data-tippy-animation="shift-away"
                           data-tippy-delay="50"
                           data-tippy-arrow="true"
                           data-tippy-theme="sharpborder"></i>
                    </a>
                    <a href="single-product-variable.html"
                       class="product-item_img">
                        <img class="img-full"
                             src="~/uploads/plants/@bi.Plant.PlantImages.FirstOrDefault(x=>x.PosterStatus == true).ImageName"
                             alt="Product Image" />
                    </a>
                    <div class="product-item_content">
                        <a class="product-item_title"
                           href="single-product-variable.html">@bi.Plant.Name</a>
                        <span class="product-item_quantity">@bi.Count x $@(bi.Plant.DiscountPercent > 0 ? (bi.Plant.SalePrice * (100 - bi.Plant.DiscountPercent) / 100).ToString("0.00") : bi.Plant.SalePrice.ToString("0.00"))</span>
                    </div>
                </li>
            }
        </ul>
    </div>
    <div class="minicart-item_total">
        <span>Subtotal</span>
        <span class="ammount">$@Model.TotalPrice.ToString("0.00")</span>
    </div>
    <div class="group-btn_wrap d-grid gap-2">
        <a asp-action="checkout" asp-controller="order" class="btn btn-dark">Checkout</a>
    </div>
</div>