@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Resetpassword";
}

<div class="breadcrumb-area breadcrumb-height"
     data-bg-image="assets/images/breadcrumb/bg/1-1-1919x388.jpg">
    <div class="container h-100">
        <div class="row h-100">
            <div class="col-lg-12">
                <div class="breadcrumb-item">
                    <h2 class="breadcrumb-heading">Reset Password Page</h2>
                    <ul>
                        <li>
                            <a href="index.html">Home</a>
                        </li>
                        <li>Reset Password</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="login-register-area section-space-y-axis-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 m-auto">
                <form method="post">
                    <div class="login-form">
                        <h4 class="login-title">Login</h4>
                        <div class="row">
                            <div class="col-lg-12">
                                <label asp-for="Password">Password*</label>
                                <input asp-for="Password" placeholder="Password" />
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>
                            <div class="col-lg-12">
                                <label asp-for="ConfirmPassword">ConfirmPassword*</label>
                                <input asp-for="ConfirmPassword" placeholder="ConfirmPassword" />
                                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                            </div>
                            <input name="Email" type="hidden" value="@ViewBag.Email" />
                            <input name="Token" type="hidden" value="@ViewBag.Token" />
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <div class="col-lg-12 pt-5">
                                <button type="submit" class="btn btn-custom-size lg-size btn-pronia-primary">
                                    Reset Password
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


